            <fileset dir="${build.dir}">
                <exclude name="**/*.java"/>
				<exclude name="${build.dist}/*"/>	
				<exclude name="${build.dir}/WEB-INF/src/*"/>
				<exclude name="${build.metainf.dir}/application.xml"/>
				<exclude name="${build.webinf.dir}/web.xml"/>
            	<exclude name="${build.webinf.dir}/dwr.xml"/>
            </fileset>
        </war>
